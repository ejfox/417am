.d3-tip
  line-height 1
  font-weight bold
  padding 0.5em
  background rgba(252, 252, 252, 0.8)
  color black
  border-radius 3px
  pointer-events none
  
  &:after
    box-sizing border-box
    display inline
    font-size 10px
    width 100%
    line-height 1
    color rgba(252, 252, 252, 0.8)
    position absolute
    pointer-events none
  &.n
    &:after
      content "\25BC"
      margin -2px 0 0 0
      top 100%
      left 0
      text-align center
  &.e
    &:after
      content "\25C0"
      margin -4px 0 0 0
      top 50%
      left -8px
  &.s
    &:after
      content "\25B2"
      margin 0 0 1px 0
      top -8px
      left 0
      text-align center
  &.w
    &:after
      content "\25B6"
      margin -4px 0 0 -1px
      top 50%
      left 100%

